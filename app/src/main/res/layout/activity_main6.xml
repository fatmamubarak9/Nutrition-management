<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity6">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="192dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageV1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:srcCompat="@drawable/img_5" />
        <TextView
            android:id="@+id/textV1"
            android:layout_width="393dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="avocado toast for breakfast" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="239dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageV2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:srcCompat="@drawable/img_6" />

        <TextView
            android:id="@+id/textV2"
            android:layout_width="393dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="rice with broccoli for lunch " />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="192dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageV3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:srcCompat="@drawable/img_7" />
        <TextView
            android:id="@+id/textV3"
            android:layout_width="393dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="chicken and barley for dinner" />
    </LinearLayout>
</LinearLayout>